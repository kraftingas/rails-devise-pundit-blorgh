<%= link_to "Home", main_app.root_path %><br><br><br>

<h1>Posts</h1>
<%= link_to "New Post", blorgh.new_post_path %>
<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <%= post.created_at %><br>
  <small>By <%= post.author %></small>
  <%= simple_format(post.text) %>
  <div>
    <h3>Comments</h3>
    <%= render post.comments %>
  </div>
  <br><br>
  <%= link_to 'Show', post %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <hr>
<% end %>
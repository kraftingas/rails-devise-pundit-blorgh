<div class="authform">
<%= form_for [@user, @user.contacts.build] do |f| %>

  <div class="field">
    <%= f.label :user_id, "Contact with #{@user}" %><br>
    <%= f.hidden_field :user_id %>
  </div>
  <% if user_signed_in? %>
    <div class="field">
      <%= f.label :name %>: <%= current_user %>
      <%= f.hidden_field :name, value: current_user %>
    </div>
    <div class="field">
      <%= f.label :email %>: <%= current_user.email %>
      <%= f.hidden_field :email, value: current_user.email %>
    </div>
  <% else %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: 'button right' %>
  </div>
<% end %>
</div>
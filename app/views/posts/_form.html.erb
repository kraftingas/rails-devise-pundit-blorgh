<div class="authform">
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :author_name %>: <%= current_user %><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :image_url, "Picture URL" %><br>
    <%= f.text_field :image_url, class: 'form-control' %>
  </div>
  <div>
    <%# label :tags %><br>
    <%# f.text_field :tags, class: 'form-control' 
%>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', class: 'button right' %>
  </div>
<% end %>
</div>
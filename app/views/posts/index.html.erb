<h1>Posts</h1>
<% if user_signed_in? %>
  <% if current_user.admin? || current_user.vip? %>
    <%= link_to "New Post", new_post_path, class: "underline" %>
  <% end %>
<% end %>
<br>
<% @posts.each do |post| %>
  <h2><small><span class="label label-primary">New</span></small> <%= link_to post.title, post %></h2>
  <%= post.created_at %><br>
  <small>By <%= link_to post.author, post.user, class: "underline" %></small>
  <p>
    <strong></strong>
    <%= image_tag(post.image_url, size: "250x250") if post.image_url.present? %>
    <%= cl_image_tag(post.image.path, size: "250x250") if post.image.present? %>
    <%# cl_image_tag(post.image_id, :crop => :fill, :width => 120, :height => 80) if post.image_id %>
    <%= simple_format(post.text) if post.text.present? %>
  </p>
  <div>
    <% if post.comments.size != 0 %>
      <h3>Comments</h3>
      <%= render post.comments.newest %>
    <% end %>
  </div>
  <br><br>
  <%# link_to 'Show', post %>
  <% if user_signed_in? %>
    <% if current_user.admin? || current_user.id == post.user_id %>
      <%= link_to 'Edit', edit_post_path(post) %>
    <% end %>
    <% if current_user.admin? %>
      | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
  <hr>
<% end %>
<br><br>
<%= link_to "<< Previous", @previous if @previous.present? %> | <%= link_to "Next >>", @next if @next.present? %>
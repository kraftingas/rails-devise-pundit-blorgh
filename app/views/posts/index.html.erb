<h1>Posts</h1>
<% if user_signed_in? %>
  <% if current_user.admin? || current_user.vip? %>
    <%= link_to "New Post", new_post_path %>
  <% end %>
<% end %>
<br>
<% @posts.each do |post| %>
  <h2><%= link_to post.title, post %></h2>
  <%= post.created_at %><br>
  <small>By <%= link_to post.author, post.user %></small>
  <%= simple_format(post.text) %>
  <p>
    <strong></strong>
    <%= image_tag(post.image_url, size: "250x250") %>
  </p>
  <div>
    <% if post.comments.size != 0 %>
      <h3>Comments</h3>
      <%= render post.comments %>
    <% end %>
  </div>
  <br><br>
  <%# link_to 'Show', post %>
  <% if user_signed_in? %>
    <% if current_user.admin? || current_user.id == post.user_id %>
      <%= link_to 'Edit', edit_post_path(post) %>
    <% end %>
    <% if current_user.admin? %>
      | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
  <hr>
<% end %>
<br><br>
<%= link_to "<< Previous", @previous if @previous.present? %> | <%= link_to "Next >>", @next if @next.present? %>